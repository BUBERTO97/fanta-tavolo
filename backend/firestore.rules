rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // NUOVA COLLEZIONE: Users
    // Ogni utente può leggere i propri dati (per sapere se è admin)
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // Idealmente, la scrittura dei ruoli dovrebbe avvenire solo dal backend o console
      allow write: if false;
    }

    match /pronostici/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // AGGIORNAMENTO: Solo gli admin possono scrivere sulla lista invitati e risultati
    match /invitati/{docId} {
      allow read: if request.auth != null;
      // La funzione exists() controlla se un documento esiste
      // get() legge un documento dal database
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    match /risultati/{docId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}