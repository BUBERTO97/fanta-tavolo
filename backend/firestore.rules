rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permetti a ogni utente loggato di leggere e scrivere solo i propri pronostici
    match /pronostici/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Permetti a tutti gli utenti loggati di leggere la lista degli invitati e i risultati
    match /invitati/{docId} {
      allow read: if request.auth != null;
    }
    match /risultati/{docId} {
        allow read: if request.auth != null;
    }
  }
}